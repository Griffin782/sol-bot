{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/backup-old/**/*",
    "fix-scripts/**/*",
    "index-*backup*.ts",
    "**/*backup*.ts",
    "ARCHIVED-BACKUPS-*/**/*",
    "backup-archives/**/*",
    "node_modules/**/*",
    "test/**/*",
    "**/*.test.ts"
  ]
}